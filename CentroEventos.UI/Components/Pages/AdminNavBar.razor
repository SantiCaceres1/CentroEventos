@inject UsuarioSesion Sesion
@inject NavigationManager Navigation
@inject UsuarioEsAdminUseCase EsAdminUseCase

@if (Sesion.EstaLogueado() && esAdmin)
{
    <span class="nav-link-wrapper">
        <NavLink href="/Admin" class="nav-link">Admin</NavLink>
        <NavLink href="/GestionarUsuarios" class="nav-link">Gestionar Usuarios</NavLink>
        <NavLink href="/GestionarPersonas" class="nav-link">Gestionar Personas</NavLink>
        <NavLink href="/Admin/Gestionar/EventosDeportivos" class="nav-link">Gestionar Eventos</NavLink>
        <NavLink href="/AdminReservas" class="nav-link">Gestionar Reservas</NavLink>
    </span>
}

@code {
    private bool esAdmin;

    protected override async Task OnInitializedAsync()
    {
        esAdmin = await EsAdminUseCase.Ejecutar();
    }
}