@page "/Registro"
<h3 class="text-center mb-4">Registro</h3>
<div class="form-container mx-auto" style="max-width: 400px;">
    <input class="form-control mb-2" placeholder="Nombre" />
    <input class="form-control mb-2" placeholder="Email" />
    <input class="form-control mb-2" placeholder="Contraseña" type="password" />
    <input class="form-control mb-2" placeholder="Confirmar Contraseña" type="password" />
    <button class="btn btn-success w-100">Crear cuenta</button>
</div>

<p class="mt-3 text-center">
    ¿Ya tenés cuenta? <NavLink href="/Login">Iniciá sesión</NavLink>
</p>
